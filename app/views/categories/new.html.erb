<h1>Create New Category</h1>

<% @category.errors.full_messages.each do |error| %>
  <h4><%= error %></h4>
<% end %>

<%= form_tag "/categories", method: :post do %>
    <div class="form">
      <div>
        <%= label_tag :name %>:
        <%= text_field_tag :name, @category.name %>
      </div>

    </div>
  <br>
    <input type="submit" name="Create New Category" class = "submitBtn">
  </br>
<% end %>