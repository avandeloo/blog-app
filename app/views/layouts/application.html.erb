<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/articles">Blog App Articles</a>
        </div>

        <% if current_user %>
          <a class="navbar-brand"> Hi, <%= current_user.name %> </a>
        <% end %>


        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <form class="navbar-form navbar-left">
            <div class="form-group">
          </form>
          <ul class="nav navbar-nav navbar-right">
          <% if current_user %>
            <li><%= link_to "Add New Article", "/articles/new"%></li>
            <li><%= link_to "Add New Category", "/categories/new"%></li>
          <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li role="separator" class="divider">Sort</li>
                <li><a href="/articles?sort=title&sort_order=asc">Name Ascending</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/articles?sort=title&sort_order=desc">Name Descending</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/articles?sort=created_at&sort_order=asc">Date Created Newest To Oldest</a></li>
                <li role="separator" class="divider"></li>
                <li><a href="/articles?sort=created_at&sort_order=desc">Date Created Oldest To Newest</a></li>
                <li role="separator" class="divider"></li>
                
                <% Category.all.each do |category| %>

                <li><a href="/articles?category=<%= category.name %>"><%= category.name %></a></li>
                <li role="separator" class="divider"></li>
                <% end %>
                <% if current_user %>
                  <li><a href="/logout">Log Out</a></li>
                  <li role="separator" class="divider"></li>
                <% else %>
                  <li><a href="/signup">Sign Up</a></li>
                  <li role="separator" class="divider"></li>
                  <li><a href="/login">Login</a></li>
                  <li role="separator" class="divider"></li>
                <% end %>
                
                <%= form_tag "/articles", method: :get do %>
                  <%= text_field_tag :search_term %>
                  <%= submit_tag "Search" %>
                <% end %>
              </ul>
            </li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <% flash.each do |name, message| %>
      <div class="alert alert-<%= name %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= name.upcase %></strong> <%= message %>
      </div>
    <% end %>
    <%= yield %>
  </body>
</html>
